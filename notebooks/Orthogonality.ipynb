   "source": [
    "Measure for orthogonality <br>\n",
    "$\\kappa(x) = || I - x \\cdot x^T||$"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {
    "collapsed": false,
    "jupyter": {
     "outputs_hidden": false
    },
    "pycharm": {
     "is_executing": false,
     "name": "#%%\n"
    }
   },
   "outputs": [],
   "source": [
    "def kappa(x):\n",
    "    return np.linalg.norm(np.eye(x.shape[0]) - x@x.T)"
   ]
  }
